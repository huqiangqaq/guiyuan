<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
    <TextView 
        android:id="@+id/tv_verNum"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="@drawable/carnum"
        android:text=""
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_storeNum"
                android:layout_width="wrap_content"
                android:text="1号砖圆仓"
                android:textColor="@color/royalblue"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_foodname"
                android:textColor="@color/royalblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="玉米"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_foodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/royalblue"
                android:text="临时储备粮"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                />
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="二等"
            android:textColor="@color/royalblue"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
        />



        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/royalblue"
            android:text="2016-01-16 12:33:00"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            />
    </LinearLayout>
	</LinearLayout>
	<!-- 第二行 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal"
	    >
    	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="2"
	    >
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="水分"
        android:textColor="@color/gray"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        />
	     <TextView 
        android:id="@+id/tv_waterper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2"
        android:text="20%"
        android:layout_marginLeft="25dp"
        android:ellipsize="end"
        />
	     </LinearLayout>
	       	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="3"
	    >
	         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
         android:textColor="@color/gray"
        android:text="容重/出糙"
        android:ellipsize="end"
        />
                <TextView android:id="@+id/tv_rongzhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:text="100kg"
        android:ellipsize="end"
        />
	               </LinearLayout>
	</LinearLayout>
	<!-- 第三行 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="杂质"
                android:textColor="@color/gray"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_zazhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="2"
                android:text="20%"
                android:layout_marginLeft="25dp"
                android:ellipsize="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:text="毛重"
                android:ellipsize="end"
                />
            <TextView android:id="@+id/tv_maozhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:layout_marginLeft="44dp"
                android:text="100kg"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>
	<!-- 第四行 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal"
	    >
    	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="2"
	    >
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         android:textColor="@color/gray"
        android:text="保管员"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        />
	     <TextView 
        android:id="@+id/tv_storeman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2"
        android:text="林森森"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        />
	     </LinearLayout>
	       	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="3"
	    >
	         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="扦样员"
        android:textColor="@color/gray"
        android:ellipsize="end"
        />
	               <TextView 
	                   android:id="@+id/tv_qianyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="30dp"
        android:text="123"
        android:ellipsize="end"
        />
	               </LinearLayout>
	</LinearLayout>
</LinearLayout>
