<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/royalblue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="烘干入库"
            android:textColor="#fff"
            android:textSize="16sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_his"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@color/skyblue"-->
            <!--android:padding="5dp"-->
            <!--android:text="历史车辆" />-->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@id/rltop"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="2"
                android:text="车牌号" />

            <Spinner
                android:id="@+id/sp_hgchepai"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:background="@drawable/edit"
                />
            <!--<Spinner -->
            <!--android:id="@+id/sp_chepaiNum"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:spinnerMode="dropdown"-->
            <!--android:background="@drawable/edit"-->
            <!--/>-->
            <EditText
                android:id="@+id/hg_carno"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="4"
                android:background="@drawable/edit"
                android:digits="QWERTYUIOPASDFGHJKLZXCVBNM1234567890qwertyuiopasdfghjklzxcvbnm"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="毛重"
                />

            <EditText
                android:id="@+id/hg_maozhong"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/edit"
                android:inputType="numberDecimal"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="皮重" />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/hg_pizhong"
                android:background="@drawable/edit"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:inputType="numberDecimal"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="粮食重量" />

            <TextView
                android:id="@+id/hg_weight"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/edit"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="司机姓名" />

            <EditText
                android:id="@+id/hg_Name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/edit"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="烘干塔" />

            <Spinner
                android:layout_width="0dp"
                android:id="@+id/sp_hongganta"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/edit"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        
        <LinearLayout
            android:id="@+id/llhgcangku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/cangku"
            android:visibility="gone" >


            <TextView
                android:id="@+id/red_hgstorename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/red_hgfoodname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/red_hglevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/red_hgwater"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
        
        
        
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvhg_reselect"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:text="重新选仓"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hgsubmit"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:background="@drawable/shixin"
            android:textColor="#fff"
            android:text="确认入库" />

        <TextView
            android:id="@+id/tv_hgconfirm"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shixin"
            android:textColor="#fff"
            android:gravity="center"
            android:text="选择仓库" />
    </LinearLayout>
</LinearLayout>
